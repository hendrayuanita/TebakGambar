<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/tebak"
            android:layout_gravity="center"
            android:layout_margin="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_bakso"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:src="@drawable/bakso" />

            <ImageView
                android:id="@+id/imageView_soto"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:src="@drawable/soto" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_sateayam"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/sateayam"
                android:layout_weight="1"
                android:layout_margin="12dp" />

            <ImageView
                android:id="@+id/imageView_rendang"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/rendang"
                android:layout_weight="1"
                android:layout_margin="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_gulai"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/gulai"
                android:layout_weight="1"
                android:layout_margin="12dp" />

            <ImageView
                android:id="@+id/imageView_gadogado"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/gadogado"
                android:layout_weight="1"
                android:layout_margin="12dp" />

        </LinearLayout>
    </LinearLayout>


</ScrollView>